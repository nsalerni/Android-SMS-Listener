<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Lab4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Value"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/solveButton"
        android:layout_alignEnd="@+id/solveButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/firstValue"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Second Value"
        android:id="@+id/text2"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/firstValue"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secondValue"
        android:layout_below="@+id/text2"
        android:layout_alignLeft="@+id/firstValue"
        android:layout_alignStart="@+id/firstValue"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum"
        android:id="@+id/solveButton"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/secondValue"
        android:layout_centerHorizontal="true"
        android:elevation="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result: "
        android:id="@+id/resultView"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/solveButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
